{
  "manifest_version": 3,
  "name": "YTruth",
  "version": "0.1",
  "description": "Adds bias and factuality indicators to YouTube.",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://ytruth-epr6esvk7-ytruthisouttheres-projects.vercel.app/*",
    "https://raw.githubusercontent.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["scripts/content.js"],
      "css": ["styles/style.css"]
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  }
}
